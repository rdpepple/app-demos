    <script>
      function setVideoSource(video_file) {
        console.log('video_file : ' + video_file);
        if ( video_file == "/videos/ghinVideoDemo.mp4") {
          document.getElementById("nowPlaying").innerHTML = "# NOW_PLAYING: GHIN VIDEO DEMO";
        } else if ( video_file == "/videos/javaGhinApplication.mp4") {
          document.getElementById("nowPlaying").innerHTML = "# NOW_PLAYING: GHIN JAVA DEMO";
        }
        var vFrame = document.getElementById("videoFrame");
        var srcAtt = document.createAttribute("src");
        srcAtt.value = video_file;
        vFrame.setAttributeNode(srcAtt);
      }
    </script>
